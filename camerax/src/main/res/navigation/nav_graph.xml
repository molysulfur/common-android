<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/permissionsFragment">

    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.molysulfur.example.camerax.CameraFragment"
        android:label="CameraFragment"
        tools:layout="@layout/fragment_camera">
        <action
            android:id="@+id/action_cameraFragment_to_permissionsFragment"
            app:destination="@id/permissionsFragment" />
        <action
            android:id="@+id/action_cameraFragment_to_cameraGalleryFragment"
            app:destination="@id/cameraGalleryFragment" />
    </fragment>
    <fragment
        android:id="@+id/permissionsFragment"
        android:name="com.molysulfur.example.camerax.PermissionsFragment"
        android:label="PermissionsFragment">
        <action
            android:id="@+id/action_permissionsFragment_to_cameraFragment"
            app:destination="@+id/cameraFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_camera_gallery"
        android:id="@+id/cameraGalleryFragment"
        android:name="com.molysulfur.example.camerax.CameraGalleryFragment"
        android:label="CameraGalleryFragment">

        <argument
            android:name="root_directory"
            app:argType="string" />
    </fragment>


</navigation>