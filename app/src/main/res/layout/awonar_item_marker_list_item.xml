<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.awonar.app.widget.ListItemView
            android:id="@+id/awonar_item_marker_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/awonar_ripple_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/awonar_item_marker_list_view"
            android:layout_width="4dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/awonar_item_marker_list_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/awonar_item_marker_list_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>