<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="username"
            type="String" />

        <variable
            name="gain"
            type="String" />

        <variable
            name="description"
            type="String" />

        <variable
            name="stopLossDescription"
            type="String" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/awonar_dialog_copier_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:navigationIcon="@drawable/awonar_ic_close"
                app:title="Copy" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/awonar_dialog_edit_copier_image_avatar"
                android:layout_width="@dimen/awonar_size_avatar"
                android:layout_height="@dimen/awonar_size_avatar"
                android:layout_margin="@dimen/awonar_size_margin_padding_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/awonar_placeholder_avatar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/awonar_dialog_edit_copier_text_username"
                style="@style/Awonar.SubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/awonar_size_margin_padding_normal"
                android:text="@{username}"
                app:layout_constraintStart_toEndOf="@+id/awonar_dialog_edit_copier_image_avatar"
                app:layout_constraintTop_toTopOf="@+id/awonar_dialog_edit_copier_image_avatar"
                tools:text="@string/awonar_example_name" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/awonar_dialog_edit_copier_text_description"
                style="@style/Awonar.Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/awonar_size_margin_padding_extra_small"
                android:text="@{description}"
                app:layout_constraintStart_toStartOf="@+id/awonar_dialog_edit_copier_text_username"
                app:layout_constraintTop_toBottomOf="@+id/awonar_dialog_edit_copier_text_username"
                tools:text="@string/awonar_example_name" />

            <View
                android:id="@+id/awonar_dialog_edit_copier_divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/awonar_size_margin_padding_normal"
                android:background="@color/awonar_color_gray"
                app:layout_constraintTop_toBottomOf="@+id/awonar_dialog_edit_copier_image_avatar" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/awonar_dialog_edit_copier_text_stoploss_description"
                style="@style/Awonar.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/awonar_size_margin_padding_normal"
                android:layout_marginTop="@dimen/awonar_size_margin_padding_large"
                android:text="@{stopLossDescription}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/awonar_dialog_edit_copier_divider_1"
                tools:text="@string/awonar_example_name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/awonar_dialog_edit_copier_text_title_stopcopy"
                style="@style/Awonar.SubTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/awonar_size_margin_padding_normal"
                android:layout_marginTop="@dimen/awonar_size_margin_padding_large"
                android:text="Stop Copy"
                app:layout_constraintEnd_toStartOf="@+id/awonar_dialog_edit_copier_toggle_stopcopy"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/awonar_dialog_edit_copier_text_stoploss_description" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/awonar_dialog_edit_copier_toggle_stopcopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/awonar_size_margin_padding_normal"
                app:checkedButton="@+id/awonar_dialog_edit_copier_toggle_amount"
                app:layout_constraintBottom_toBottomOf="@+id/awonar_dialog_edit_copier_text_title_stopcopy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/awonar_dialog_edit_copier_text_title_stopcopy"
                app:selectionRequired="true"
                app:singleSelection="true">

                <Button
                    android:id="@+id/awonar_dialog_edit_copier_toggle_amount"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/awonar_selector_toggle_button_primary"
                    android:text="@string/awonar_text_amount" />

                <Button
                    android:id="@+id/awonar_dialog_edit_copier_toggle_ratio"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/awonar_selector_toggle_button_primary"
                    android:text="@string/awonar_text_ratio" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <com.awonar.app.widget.NumberPickerEditText
                android:id="@+id/awonar_dialog_edit_copier_numberpicker_stopcopy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/awonar_size_margin_padding_normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/awonar_dialog_edit_copier_text_title_stopcopy" />

            <View
                android:id="@+id/awonar_dialog_edit_copier_divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/awonar_size_margin_padding_normal"
                android:background="@color/awonar_color_gray"
                app:layout_constraintTop_toBottomOf="@+id/awonar_dialog_edit_copier_numberpicker_stopcopy" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/awonar_dialog_edit_copier_checkbox_open_trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/awonar_size_margin_padding_normal"
                android:text="Copy Open Trade"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/awonar_dialog_edit_copier_divider_2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/awonar_dialog_edit_copier_button_copy"
                style="@style/Awonar.Button.Default.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/awonar_text_update"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/awonar_dialog_edit_copier_checkbox_open_trade" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
