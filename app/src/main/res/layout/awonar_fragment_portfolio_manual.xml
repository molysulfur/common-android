<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.awonar.app.ui.portfolio.PortFolioViewModel" />

        <variable
            name="marketViewModel"
            type="com.awonar.app.ui.market.MarketViewModel" />

    </data>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/awonar_portfolio_recycler_orders"
        activedColumn="@{viewModel.activedColumnState}"
        setOrderPortfolio="@{viewModel.positionOrderList}"
        updateQuote="@{marketViewModel.quoteSteamingState}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        tools:listitem="@layout/awonar_item_instrument_order" />

</layout>
