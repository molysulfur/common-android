<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.awonar.app.ui.portfolio.PortFolioViewModel" />

        <variable
            name="columnViewModel"
            type="com.awonar.app.ui.columns.ColumnsViewModel" />

        <variable
            name="market"
            type="com.awonar.app.ui.market.MarketViewModel" />

        <variable
            name="column1"
            type="String" />

        <variable
            name="column2"
            type="String" />

        <variable
            name="column3"
            type="String" />

        <variable
            name="column4"
            type="String" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Portfolio">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_portfolio_text_title_available"
                    style="@style/Awonar.Text.Default.Normal.Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/awonar_size_margin_padding_normal"
                    android:layout_marginTop="@dimen/awonar_size_margin_padding_normal"
                    android:text="@string/awonar_text_avaliable"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_portfolio_text_available"
                    style="@style/Awonar.Text.Default.Normal"
                    setAvaliable="@{viewModel.portfolioState.available}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/awonar_size_margin_padding_normal"
                    app:layout_constraintStart_toEndOf="@+id/awonar_portfolio_text_title_available"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/awonar_example_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_portfolio_text_title_total_allocate"
                    style="@style/Awonar.Text.Default.Normal.Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/awonar_size_margin_padding_normal"
                    android:text="@string/awonar_text_allocate"
                    app:layout_constraintStart_toStartOf="@+id/awonar_portfolio_text_title_available"
                    app:layout_constraintTop_toBottomOf="@+id/awonar_portfolio_text_title_available" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_portfolio_text_title_allocate"
                    style="@style/Awonar.Text.Default.Normal"
                    setAllocate="@{viewModel.portfolioState.totalAllocated}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/awonar_size_margin_padding_normal"
                    app:layout_constraintStart_toEndOf="@+id/awonar_portfolio_text_title_total_allocate"
                    app:layout_constraintTop_toBottomOf="@+id/awonar_portfolio_text_title_available"
                    tools:text="@string/awonar_example_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_portfolio_text_title_equity"
                    style="@style/Awonar.Text.Default.Normal.Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/awonar_text_equity"
                    app:layout_constraintEnd_toStartOf="@+id/awonar_portfolio_text_equity"
                    app:layout_constraintTop_toTopOf="@+id/awonar_portfolio_text_title_total_allocate" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_portfolio_text_equity"
                    style="@style/Awonar.Text.Default.Normal"
                    setEquity="@{+viewModel.equityState}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/awonar_portfolio_text_profit"
                    app:layout_constraintTop_toTopOf="@+id/awonar_portfolio_text_title_total_allocate"
                    tools:text="@string/awonar_example_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_portfolio_text_title_profit"
                    style="@style/Awonar.Text.Default.Normal.Gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/awonar_text_profit"
                    app:layout_constraintEnd_toStartOf="@+id/awonar_portfolio_text_profit"
                    app:layout_constraintTop_toTopOf="@+id/awonar_portfolio_text_title_available" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_portfolio_text_profit"
                    style="@style/Awonar.Text.Default.Normal"
                    setProfit="@{+viewModel.profitState}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/awonar_size_margin_padding_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/awonar_portfolio_text_title_available"
                    tools:text="@string/awonar_example_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/awonar_main_drawer_navigation_host_portfolio"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:navGraph="@navigation/awonar_portfolio_graph" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
