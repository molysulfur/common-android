<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="subTitle"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/awonar_ripple_white"
        android:padding="@dimen/awonar_size_margin_padding_normal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/awonar_folder_watchlist_text_title"
            style="@style/Awonar.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{title}"
            app:layout_constraintBottom_toTopOf="@+id/awonar_folder_watchlist_text_subtitle"
            app:layout_constraintEnd_toStartOf="@+id/awonar_folder_watchlist_button_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            tools:text="@string/awonar_example_name" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/awonar_folder_watchlist_button_close"
            style="@style/Awonar.Button.Icon"
            android:layout_width="@dimen/awonar_size_icon"
            android:layout_height="@dimen/awonar_size_icon"
            android:src="@drawable/awonar_ic_close"
            app:layout_constraintBottom_toTopOf="@+id/awonar_folder_watchlist_text_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/awonar_folder_watchlist_text_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/awonar_folder_watchlist_text_subtitle"
            style="@style/Awonar.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{subTitle}"
            app:layout_constraintBottom_toTopOf="@+id/awonar_folder_watchlist_recycler_recent"
            app:layout_constraintEnd_toEndOf="@+id/awonar_folder_watchlist_text_title"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/awonar_folder_watchlist_text_title"
            app:layout_constraintTop_toBottomOf="@+id/awonar_folder_watchlist_text_title"
            tools:text="@string/awonar_example_name" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/awonar_folder_watchlist_recycler_recent"
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="@dimen/awonar_size_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/awonar_folder_watchlist_text_subtitle"
            tools:layout_editor_absoluteX="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
