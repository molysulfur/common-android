<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/awoanr_progress_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/awonar_ic_full_logo" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/awonar_size_margin_padding_extra_small"
        android:indeterminate="true"
        app:indicatorColor="@color/awonar_color_primary"
        app:layout_constraintEnd_toEndOf="@+id/awoanr_progress_logo"
        app:layout_constraintStart_toStartOf="@+id/awoanr_progress_logo"
        app:layout_constraintTop_toBottomOf="@+id/awoanr_progress_logo"
        app:trackColor="@color/awonar_color_light_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>