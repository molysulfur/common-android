<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.awonar.app.ui.portfolio.PortFolioViewModel" />

        <variable
            name="historyViewModel"
            type="com.awonar.app.ui.history.HistoryViewModel" />

        <variable
            name="startValue"
            type="String" />

        <variable
            name="endValue"
            type="String" />


        <variable
            name="moneyIn"
            type="String" />

        <variable
            name="moneyOut"
            type="String" />


        <variable
            name="profitLoss"
            type="String" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/awonar_history_include_allocation_header"
                    layout="@layout/awonar_include_allocation"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_history_text_section"
                    style="@style/Awonar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/awonar_size_margin_padding_normal"
                    android:drawableEnd="@drawable/awonar_ic_expand"
                    android:text="@string/awonar_title_history"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/awonar_history_include_allocation_header" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_history_text_start_value"
                    style="@style/Awonar.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/awonar_size_margin_padding_normal"
                    android:text="@{startValue}"
                    app:layout_constraintEnd_toStartOf="@+id/awonar_history_text_end_value"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/awonar_history_text_section" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_history_text_start_value_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Value"
                    app:layout_constraintStart_toStartOf="@+id/awonar_history_text_start_value"
                    app:layout_constraintTop_toBottomOf="@+id/awonar_history_text_start_value" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_history_text_end_value"
                    style="@style/Awonar.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/awonar_size_margin_padding_normal"
                    android:text="@{endValue}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/awonar_history_text_start_value"
                    app:layout_constraintTop_toBottomOf="@+id/awonar_history_text_section" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_history_text_end_value_title"
                    style="@style/Awonar.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Value"
                    app:layout_constraintEnd_toEndOf="@+id/awonar_history_text_end_value"
                    app:layout_constraintTop_toBottomOf="@+id/awonar_history_text_end_value" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_history_text_money_in_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/awonar_size_margin_padding_normal"
                    android:text="Money In"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/awonar_history_text_money_in"
                    app:layout_constraintTop_toBottomOf="@+id/awonar_history_text_money_in" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_history_text_money_in"
                    style="@style/Awonar.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/awonar_size_margin_padding_normal"
                    android:text="@{moneyIn}"
                    app:layout_constraintEnd_toStartOf="@+id/awonar_history_text_money_out"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@+id/awonar_history_text_start_value_title"
                    app:layout_constraintTop_toBottomOf="@+id/awonar_history_text_start_value_title" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_history_text_money_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{moneyOut}"
                    app:layout_constraintEnd_toStartOf="@+id/awonar_history_text_profitloss"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/awonar_history_text_money_in"
                    app:layout_constraintTop_toTopOf="@+id/awonar_history_text_money_in" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_history_text_profitloss"
                    style="@style/Awonar.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{profitLoss}"
                    app:layout_constraintEnd_toEndOf="@+id/awonar_history_text_end_value_title"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/awonar_history_text_money_out"
                    app:layout_constraintTop_toTopOf="@+id/awonar_history_text_money_in" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_history_text_money_out_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/awonar_size_margin_padding_normal"
                    android:text="Money Out"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/awonar_history_text_money_out"
                    app:layout_constraintStart_toStartOf="@+id/awonar_history_text_money_out"
                    app:layout_constraintTop_toBottomOf="@+id/awonar_history_text_money_out" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/awonar_history_text_profitloss_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/awonar_size_margin_padding_normal"
                    android:text="P/L ($)"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/awonar_history_text_profitloss"
                    app:layout_constraintTop_toBottomOf="@+id/awonar_history_text_profitloss" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <include
                android:id="@+id/awonar_history_include_column"
                column1="@{historyViewModel.columnState[0]}"
                column2="@{historyViewModel.columnState[1]}"
                column3="@{historyViewModel.columnState[2]}"
                column4="@{historyViewModel.columnState[3]}"
                layout="@layout/awonar_include_column"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/awonar_history_recycler_items"
                historyColumns="@{historyViewModel.columnState}"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/awonar_color_surface"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/awonar_history_include_column" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>
