<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_margin="@dimen/awonar_size_margin_padding_normal"
    android:fillViewport="true">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/awonar_item_viewpager_tabs"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/awonar_item_chip_stat"
            style="@style/Awonar.Chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistic" />

        <com.google.android.material.chip.Chip
            android:id="@+id/awonar_item_chip_income"
            style="@style/Awonar.Chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income Statement" />

        <com.google.android.material.chip.Chip
            android:id="@+id/awonar_item_chip_balance"
            style="@style/Awonar.Chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance Sheet" />


        <com.google.android.material.chip.Chip
            android:id="@+id/awonar_item_chip_cashflow"
            style="@style/Awonar.Chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cashflow" />

    </com.google.android.material.chip.ChipGroup>

</HorizontalScrollView>



