<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/awonar_portfolio_graph"
    app:startDestination="@+id/positionFragment">

    <fragment
        android:id="@+id/portFolioInsideInstrumentPortfolioFragment"
        android:name="com.awonar.app.ui.portfolio.inside.PortFolioInsideInstrumentFragment"
        android:label="PortFolioInsideInstrumentPortfolioFragment">

        <argument
            android:name="index"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/portFolioInsideInstrumentCopierFragment"
        android:name="com.awonar.app.ui.portfolio.inside.PortFolioInsideInstrumentCopierFragment"
        android:label="PortFolioInsideInstrumentCopierFragment">

        <argument
            android:name="index"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/portFolioInsideCopierFragment"
        android:name="com.awonar.app.ui.portfolio.inside.PortFolioInsideCopierFragment"
        android:label="PortFolioInsideCopierFragment">

        <action
            android:id="@+id/action_portFolioInsideCopierFragment_to_portFolioInsideInstrumentCopierFragment"
            app:destination="@+id/portFolioInsideInstrumentCopierFragment"
            app:enterAnim="@anim/common_anim_right_to_left_in"
            app:exitAnim="@anim/common_anim_right_to_left_out"
            app:popEnterAnim="@anim/common_anim_left_to_right_in"
            app:popExitAnim="@anim/common_anim_left_to_right_out" />

        <argument
            android:name="index"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/positionFragment"
        android:name="com.awonar.app.ui.portfolio.position.PositionFragment"
        android:label="PositionFragment"
        tools:layout="@layout/awonar_fragment_position">
        <action
            android:id="@+id/action_positionFragment_to_portFolioInsideInstrumentPortfolioFragment"
            app:destination="@+id/portFolioInsideInstrumentPortfolioFragment"
            app:enterAnim="@anim/common_anim_right_to_left_in"
            app:exitAnim="@anim/common_anim_right_to_left_out"
            app:popEnterAnim="@anim/common_anim_left_to_right_in"
            app:popExitAnim="@anim/common_anim_left_to_right_out" />

        <action
            android:id="@+id/action_positionFragment_to_portFolioInsideCopierPortfolioFragment"
            app:destination="@+id/portFolioInsideCopierFragment"
            app:enterAnim="@anim/common_anim_right_to_left_in"
            app:exitAnim="@anim/common_anim_right_to_left_out"
            app:popEnterAnim="@anim/common_anim_left_to_right_in"
            app:popExitAnim="@anim/common_anim_left_to_right_out" />

        <action
            android:id="@+id/action_positionFragment_to_historyFragment"
            app:destination="@+id/historyFragment"
            app:enterAnim="@anim/common_anim_right_to_left_in"
            app:exitAnim="@anim/common_anim_right_to_left_out"
            app:popEnterAnim="@anim/common_anim_left_to_right_in"
            app:popExitAnim="@anim/common_anim_left_to_right_out" />

    </fragment>

</navigation>