<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Awonar" />

    <style name="Awonar.Default"></style>

    <style name="Awonar.Text">
        <item name="android:textColor">@color/awonar_color_variant</item>
    </style>

    <style name="Awonar.Text.Default">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Awonar.Text.Default.Small">
        <item name="android:textSize">@dimen/awonar_size_text_small</item>
    </style>

    <style name="Awonar.Text.Default.Normal">
        <item name="android:textSize">@dimen/awonar_size_text_normal</item>
    </style>

    <style name="Awonar.Text.Default.Large">
        <item name="android:textSize">@dimen/awonar_size_text_large</item>
    </style>

    <style name="Awonar.Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Awonar.Text.Bold.Small">
        <item name="android:textSize">@dimen/awonar_size_text_small</item>
    </style>

    <style name="Awonar.Text.Bold.Normal">
        <item name="android:textSize">@dimen/awonar_size_text_normal</item>
    </style>

    <style name="Awonar.Text.Bold.Large">
        <item name="android:textSize">@dimen/awonar_size_text_large</item>
    </style>

    <style name="Awonar.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/awonar_color_variant</item>
    </style>

    <style name="Awonar.Button.Default" />

    <style name="Awonar.Button.Default.Green">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/awonar_ripple_green</item>
    </style>

    <style name="Awonar.Button.Default.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/awonar_ripple_primary</item>
    </style>

    <style name="Awonar.Button.Submit" parent="Awonar.Button.Default.Primary" />

    <style name="Awonar.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/awonar_color_text_primary</item>
        <item name="hintTextColor">@color/awonar_color_primary</item>
        <item name="boxStrokeColor">@color/awonar_color_primary</item>
        <item name="android:layout_margin">@dimen/awonar_size_margin_padding_normal</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Awonar.Button.Link">
        <item name="android:padding">@dimen/awonar_size_margin_padding_extra_small</item>
        <item name="android:background">@drawable/awonar_ripple_tranparent</item>
        <item name="android:textColor">@color/awonar_color_primary</item>
    </style>

    <style name="Awonar.Button.Icon">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/awonar_ripple_icon</item>
        <item name="android:textColor">@color/awonar_color_primary</item>
    </style>

    <style name="Awonar.Button.Border">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/awonar_ripple_border_gray</item>
    </style>

    <style name="Awonar.Toolbar">
        <item name="android:background">@color/awonar_color_surface</item>
    </style>

    <style name="Awonar.Avatar">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Awonar.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/awonar_selector_navigation</item>
        <item name="itemTextColor">@color/awonar_selector_navigation</item>
        <item name="itemShapeFillColor">@color/awonar_selector_navigation_background</item>
    </style>

    <style name="Awonar.Title" parent="Awonar.Text.Bold.Large"></style>

    <style name="Awonar.SubTitle" parent="Awonar.Text.Bold.Normal"></style>

    <style name="Awonar.Description" parent="Awonar.Text.Default.Normal"></style>

    <style name="Awonar.SubDescription" parent="Awonar.Text.Default.Small"></style>
</resources>