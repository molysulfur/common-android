<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Awonar" />

    <style name="Awonar.Default" />

    <style name="Awonar.Text">
        <item name="android:textColor">@color/awonar_color_variant</item>
    </style>

    <style name="Awonar.Text.Error">
        <item name="android:textColor">@color/awonar_color_orange</item>
    </style>

    <style name="Awonar.Text.Default">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Awonar.Text.Default.Small">
        <item name="android:textSize">@dimen/awonar_size_text_small</item>
    </style>

    <style name="Awonar.Text.Default.Small.Primary">
        <item name="android:textColor">@color/awonar_color_primary</item>
    </style>

    <style name="Awonar.Text.Default.Normal">
        <item name="android:textSize">@dimen/awonar_size_text_normal</item>
    </style>

    <style name="Awonar.Text.Default.Large">
        <item name="android:textSize">@dimen/awonar_size_text_large</item>
    </style>

    <style name="Awonar.Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Awonar.Text.Bold.Small">
        <item name="android:textSize">@dimen/awonar_size_text_small</item>
    </style>

    <style name="Awonar.Text.Bold.Normal">
        <item name="android:textSize">@dimen/awonar_size_text_normal</item>
    </style>

    <style name="Awonar.Text.Bold.Normal.Green">
        <item name="android:textColor">@color/awonar_color_green</item>
    </style>

    <style name="Awonar.Text.Bold.Large">
        <item name="android:textSize">@dimen/awonar_size_text_large</item>
    </style>

    <style name="Awonar.Text.Bold.ExtraLarge">
        <item name="android:textSize">@dimen/awonar_size_text_extra_large</item>
    </style>

    <style name="Awonar.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/awonar_color_variant</item>
    </style>

    <style name="Awonar.Button.Default" />

    <style name="Awonar.Button.Default.Small">
        <item name="android:textSize">@dimen/awonar_size_text_small</item>
    </style>

    <style name="Awonar.Button.Default.Small.Gray">
        <item name="android:background">@drawable/awonar_ripple_light_gray</item>
    </style>

    <style name="Awonar.Button.Default.Green">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/awonar_ripple_green</item>
    </style>

    <style name="Awonar.Button.Default.White">
        <item name="android:background">@drawable/awonar_ripple_white</item>
    </style>

    <style name="Awonar.Button.Default.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/awonar_ripple_primary</item>
    </style>

    <style name="Awonar.Button.Default.Warning">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/awonar_ripple_orange</item>
    </style>

    <style name="Awonar.Button.Default.LightGray">
        <item name="android:background">@drawable/awonar_ripple_light_gray</item>
    </style>

    <style name="Awonar.Button.Submit" parent="Awonar.Button.Default.Primary" />

    <style name="Awonar.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/awonar_color_text_primary</item>
        <item name="hintTextColor">@color/awonar_color_primary</item>
        <item name="boxStrokeColor">@color/awonar_color_primary</item>
        <item name="android:layout_margin">@dimen/awonar_size_margin_padding_normal</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Awonar.AutoComplete" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColor">@color/awonar_color_text_primary</item>
        <item name="hintTextColor">@color/awonar_color_primary</item>
        <item name="boxStrokeColor">@color/awonar_color_primary</item>
        <item name="android:layout_margin">@dimen/awonar_size_margin_padding_normal</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Awonar.EditText.NoR" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/awonar_color_text_primary</item>
        <item name="hintTextColor">@color/awonar_color_primary</item>
        <item name="boxStrokeColor">@color/awonar_color_primary</item>
        <item name="android:layout_margin">@dimen/awonar_size_margin_padding_normal</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="Awonar.Button.Link">
        <item name="android:padding">@dimen/awonar_size_margin_padding_extra_small</item>
        <item name="android:background">@drawable/awonar_ripple_tranparent</item>
        <item name="android:textColor">@color/awonar_color_primary</item>
    </style>

    <style name="Awonar.Button.Link.Red">
        <item name="android:textColor">@color/awonar_color_orange</item>
    </style>

    <style name="Awonar.Button.Link.Green">
        <item name="android:textColor">@color/awonar_color_green</item>
    </style>

    <style name="Awonar.Button.Icon">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">@dimen/awonar_size_margin_padding_normal</item>
        <item name="android:background">@drawable/awonar_ripple_icon</item>
        <item name="android:textColor">@color/awonar_color_primary</item>
    </style>

    <style name="Awonar.Button.Border">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/awonar_ripple_border_gray</item>
    </style>

    <style name="Awonar.Toolbar">
        <item name="android:background">@color/awonar_color_surface</item>
    </style>

    <style name="Awonar.Avatar">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Awonar.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemIconTint">@color/awonar_selector_navigation</item>
        <item name="itemTextColor">@color/awonar_selector_navigation</item>
        <item name="itemShapeFillColor">@color/awonar_selector_navigation_background</item>
    </style>

    <style name="Awonar.Title" parent="Awonar.Text.Bold.Large"></style>

    <style name="Awonar.SubTitle" parent="Awonar.Text.Bold.Normal"></style>

    <style name="Awonar.Description" parent="Awonar.Text.Default.Normal"></style>

    <style name="Awonar.SubDescription" parent="Awonar.Text.Default.Small"></style>

    <style name="Awonar.TabLayout">
        <item name="tabIndicatorColor">@color/awonar_color_primary</item>
        <item name="tabSelectedTextColor">@color/awonar_color_primary</item>
    </style>

    <style name="Awonar.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Awonar.Button.Toggle">
        <item name="selectionRequired">true</item>
        <item name="singleSelection">true</item>
        <item name="android:layout_margin">@dimen/awonar_size_margin_padding_normal</item>
    </style>

    <!-- TextInput Layout Style -->
    <style name="Awonar.EditText.Dropdown" parent="Widget.App.TextInputLayout">
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/awonar_color_primary</item>
        <item name="colorOnSurface">@color/awonar_color_gray</item>
        <item name="colorError">@color/awonar_color_orange</item>
    </style>

</resources>